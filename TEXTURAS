local RainbowUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/luis32405516-cmyk/library.lua/refs/heads/main/Prueba2"))()
local hud = RainbowUI:CreateWindow(230, 280)

local Player = game:GetService("Players").LocalPlayer

-- Funci√≥n para aplicar accesorios y ropa
local function applyFullLook(shirtID, pantsID, accessoryIDs)
    local char = Player.Character
    if not char then return end

    -- 1. Aplicar Camisa (Top)
    local s = char:FindFirstChildOfClass("Shirt") or Instance.new("Shirt", char)
    s.ShirtTemplate = "rbxassetid://" .. shirtID
    
    -- 2. Aplicar Pantal√≥n (Bottom)
    local p = char:FindFirstChildOfClass("Pants") or Instance.new("Pants", char)
    p.PantsTemplate = "rbxassetid://" .. pantsID

    -- 3. Aplicar Accesorios (Capa, Casco, Alas, etc.)
    -- Nota: Usamos GetObjects para cargar accesorios del cat√°logo localmente
    for _, id in ipairs(accessoryIDs) do
        task.spawn(function()
            local success, assets = pcall(function()
                return game:GetObjects("rbxassetid://" .. id)
            end)
            if success and assets[1] then
                local acc = assets[1]
                if acc:IsA("Accessory") or acc:IsA("Model") then
                    acc.Parent = char
                end
            end
        end)
    end
    
    hud:Notify("SKIN 1: KINGS KNIGHT ‚úÖ", 3)
end

-- CARPETA TEXTURAS
local fTexturas = hud:AddFolder("TEXTURAS üëï")

-- BOT√ìN SKIN 1 (Caballero Real)
fTexturas:AddButton("SKIN 1", function()
    local shirt = "17615400950" -- Black Gold Kleos Top
    local pants = "17615468259" -- Black Gold Kleos Bottom
    
    local accessories = {
        "136585179769622", -- Kings Knight Armor
        "114860432799719", -- Kings Knight Wings
        "113540764470202", -- Left Pauldron
        "71926774402552",  -- Right Pauldron
        "85629852617395",  -- Kings Knight Helmet
        "72503351364631"   -- Leg Protector
    }
    
    applyFullLook(shirt, pants, accessories)
end)

-- Bot√≥n para limpiar todo
hud:AddButton("QUITAR TODO ‚ùå", function()
    local char = Player.Character
    if char then
        for _, obj in ipairs(char:GetChildren()) do
            if obj:IsA("Shirt") or obj:IsA("Pants") or obj:IsA("Accessory") or obj:IsA("ShirtGraphic") then
                obj:Destroy()
            end
        end
        hud:Notify("Skin reseteada", 2)
    end
end)
