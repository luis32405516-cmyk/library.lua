-- [[ FUNCIONES DE CREACIÃ“N DE CONTROLES (DISEÃ‘O) ]]

-- 1. SWITCH (INTERRUPTOR)
local function AddSwitch(text)
    local Frame = Instance.new("Frame", Container)
    Frame.Size = UDim2.new(0.9, 0, 0, 30)
    Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 6)
    
    local Label = Instance.new("TextLabel", Frame)
    Label.Text = text
    Label.Size = UDim2.new(0.6, 0, 1, 0)
    Label.Position = UDim2.new(0, 10, 0, 0)
    Label.BackgroundTransparency = 1
    Label.TextColor3 = Color3.new(0.8, 0.8, 0.8)
    Label.Font = Enum.Font.GothamSemibold
    Label.TextSize = 10
    Label.TextXAlignment = Enum.TextXAlignment.Left
    
    local ToggleBG = Instance.new("TextButton", Frame)
    ToggleBG.Size = UDim2.new(0, 35, 0, 18)
    ToggleBG.Position = UDim2.new(1, -45, 0.5, -9)
    ToggleBG.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    ToggleBG.Text = ""
    Instance.new("UICorner", ToggleBG).CornerRadius = UDim.new(1, 0)
    
    local Circle = Instance.new("Frame", ToggleBG)
    Circle.Size = UDim2.new(0, 14, 0, 14)
    Circle.Position = UDim2.new(0, 2, 0.5, -7)
    Circle.BackgroundColor3 = Color3.new(1, 1, 1)
    Instance.new("UICorner", Circle).CornerRadius = UDim.new(1, 0)
    
    local on = false
    ToggleBG.MouseButton1Click:Connect(function()
        on = not on
        if on then
            Circle:TweenPosition(UDim2.new(1, -16, 0.5, -7), "Out", "Quart", 0.2, true)
            ToggleBG.BackgroundColor3 = Color3.fromRGB(0, 200, 100)
            Notify(text .. ": ON", Color3.new(0, 1, 0))
        else
            Circle:TweenPosition(UDim2.new(0, 2, 0.5, -7), "Out", "Quart", 0.2, true)
            ToggleBG.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
            Notify(text .. ": OFF", Color3.new(1, 0, 0))
        end
    end)
end

-- 2. SLIDER (BARRITA SUBIR/BAJAR)
local function AddSlider(text)
    local Frame = Instance.new("Frame", Container)
    Frame.Size = UDim2.new(0.9, 0, 0, 45)
    Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 6)
    
    local Label = Instance.new("TextLabel", Frame)
    Label.Text = text
    Label.Size = UDim2.new(1, 0, 0, 20)
    Label.Position = UDim2.new(0, 10, 0, 5)
    Label.BackgroundTransparency = 1
    Label.TextColor3 = Color3.new(0.8, 0.8, 0.8)
    Label.Font = Enum.Font.GothamSemibold
    Label.TextSize = 10
    Label.TextXAlignment = Enum.TextXAlignment.Left
    
    local SliderBG = Instance.new("Frame", Frame)
    SliderBG.Size = UDim2.new(0.85, 0, 0, 4)
    SliderBG.Position = UDim2.new(0.5, 0, 0, 32)
    SliderBG.AnchorPoint = Vector2.new(0.5, 0.5)
    SliderBG.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    Instance.new("UICorner", SliderBG)
    
    local Fill = Instance.new("Frame", SliderBG)
    Fill.Size = UDim2.new(0.5, 0, 1, 0)
    Fill.BackgroundColor3 = Color3.fromRGB(0, 180, 255) -- AZUL FIJO RE-CALIDAD
    Instance.new("UICorner", Fill)
    
    local Knob = Instance.new("TextButton", Fill)
    Knob.Size = UDim2.new(0, 12, 0, 12)
    Knob.Position = UDim2.new(1, -6, 0.5, -6)
    Knob.BackgroundColor3 = Color3.new(1, 1, 1)
    Knob.Text = ""
    Instance.new("UICorner", Knob).CornerRadius = UDim.new(1, 0)
end

-- 3. BOTÃ“N (ACCIÃ“N)
local function AddButton(text)
    local b = Instance.new("TextButton", Container)
    b.Size = UDim2.new(0.9, 0, 0, 30)
    b.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    b.Text = text
    b.TextColor3 = Color3.new(1, 1, 1)
    b.Font = Enum.Font.GothamBold
    b.TextSize = 10
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 6)
    b.MouseButton1Click:Connect(function() Notify("Ejecutando: "..text) end)
end

-- CARGAR MAQUETA DE PRUEBA
AddSwitch("Fly Hack")
AddSlider("Velocidad")
AddSwitch("Inf Jump")
AddButton("Teleport Random")
AddSlider("Salto")

-- (Resto de pestaÃ±as y neÃ³n mantenido igual...)
local function AddTab(name)
    local t = Instance.new("TextButton", Sidebar)
    t.Size = UDim2.new(0.9, 0, 0, 24)
    t.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    t.Text = name
    t.TextColor3 = Color3.new(1, 1, 1)
    t.Font = Enum.Font.GothamBold
    t.TextSize = 9
    Instance.new("UICorner", t).CornerRadius = UDim.new(0, 6)
end
AddTab("âš¡ MOVIMIENTO")
