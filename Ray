-- [[ CONTENIDO: √Årea principal con scroll ]]
local ContentArea = Instance.new("ScrollingFrame")
ContentArea.Name = "ContentArea"
ContentArea.Parent = MainFrame
ContentArea.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
ContentArea.BackgroundTransparency = 1
ContentArea.BorderSizePixel = 0
ContentArea.Size = UDim2.new(1, -160, 1, -40) -- Ajustado al Sidebar y Header
ContentArea.Position = UDim2.new(0, 155, 0, 35)
ContentArea.CanvasSize = UDim2.new(0, 0, 2, 0) -- Permite scroll vertical
ContentArea.ScrollBarThickness = 6
ContentArea.ScrollBarImageColor3 = NEON_COLOR_1 -- Color ne√≥n para la barra de scroll

local ContentListLayout = Instance.new("UIListLayout")
ContentListLayout.Parent = ContentArea
ContentListLayout.FillDirection = Enum.FillDirection.Vertical
ContentListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
ContentListLayout.Padding = UDim.new(0, 10)
ContentListLayout.SortOrder = Enum.SortOrder.LayoutOrder

-- Diccionario para guardar el contenido de cada pesta√±a
local Tabs = {}
local CurrentTab = nil

-- [[ FUNCI√ìN PARA CREAR UNA PESTA√ëA ]]
local function CreateTab(name, icon)
    local TabButton = Instance.new("TextButton")
    TabButton.Name = name .. "Tab"
    TabButton.Parent = Sidebar
    TabButton.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    TabButton.Size = UDim2.new(0, 140, 0, 40)
    TabButton.Text = (icon and icon .. " " or "") .. name
    TabButton.TextColor3 = Color3.fromRGB(200, 200, 200)
    TabButton.Font = Enum.Font.GothamSemibold
    TabButton.TextSize = 14
    TabButton.TextXAlignment = Enum.TextXAlignment.Left
    TabButton.TextScaled = false
    TabButton.TextWrapped = true
    TabButton.LayoutOrder = #Tabs + 1 -- Para ordenar las pesta√±as

    UICorner_Main:Clone().Parent = TabButton -- Bordes redondeados

    -- Frame para el contenido de esta pesta√±a
    local TabContentFrame = Instance.new("Frame")
    TabContentFrame.Name = name .. "Content"
    TabContentFrame.Parent = ContentArea
    TabContentFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    TabContentFrame.BackgroundTransparency = 1
    TabContentFrame.Size = UDim2.new(1, -20, 0, 0) -- El tama√±o se ajustar√° con el contenido
    TabContentFrame.Visible = false -- Oculto por defecto

    local TabContentListLayout = Instance.new("UIListLayout")
    TabContentListLayout.Parent = TabContentFrame
    TabContentListLayout.FillDirection = Enum.FillDirection.Vertical
    TabContentListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    TabContentListLayout.Padding = UDim.new(0, 10)
    TabContentListLayout.SortOrder = Enum.SortOrder.LayoutOrder

    -- Ajusta autom√°ticamente la altura del TabContentFrame
    TabContentListLayout.Changed:Connect(function(property)
        if property == "AbsoluteContentSize" then
            TabContentFrame.Size = UDim2.new(1, -20, 0, TabContentListLayout.AbsoluteContentSize.Y)
            ContentArea.CanvasSize = UDim2.new(0, 0, 0, ContentListLayout.AbsoluteContentSize.Y)
        end
    end)


    Tabs[name] = {Button = TabButton, Content = TabContentFrame}

    -- L√≥gica para cambiar de pesta√±a
    TabButton.MouseButton1Click:Connect(function()
        if CurrentTab then
            Tabs[CurrentTab].Content.Visible = false
            Tabs[CurrentTab].Button.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
            Tabs[CurrentTab].Button.TextColor3 = Color3.fromRGB(200, 200, 200)
        end
        TabContentFrame.Visible = true
        TabButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50) -- Color al seleccionar
        TabButton.TextColor3 = NEON_COLOR_1
        CurrentTab = name
    end)

    -- Activar la primera pesta√±a por defecto
    if #Tabs == 1 then
        TabButton:SetAttribute("Activated", true) -- Usamos atributos para evitar activar el evento al inicio
        TabContentFrame.Visible = true
        TabButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        TabButton.TextColor3 = NEON_COLOR_1
        CurrentTab = name
    end

    return TabContentFrame -- Devuelve el frame de contenido para a√±adir elementos
end

-- [[ FUNCI√ìN PARA CREAR UN SEPARADOR (FRAME CON LUZ NE√ìN) ]]
local function CreateSection(parentFrame, title)
    local SectionFrame = Instance.new("Frame")
    SectionFrame.Name = title:gsub(" ", "") .. "Section"
    SectionFrame.Parent = parentFrame
    SectionFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    SectionFrame.Size = UDim2.new(1, 0, 0, 50) -- Altura inicial
    SectionFrame.BorderSizePixel = 0

    UICorner_Main:Clone().Parent = SectionFrame

    local SectionTitle = Instance.new("TextLabel")
    SectionTitle.Parent = SectionFrame
    SectionTitle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    SectionTitle.BackgroundTransparency = 1
    SectionTitle.Size = UDim2.new(1, -20, 0, 20)
    SectionTitle.Position = UDim2.new(0, 10, 0, 5)
    SectionTitle.Font = Enum.Font.GothamSemibold
    SectionTitle.TextSize = 14
    SectionTitle.TextColor3 = NEON_COLOR_2 -- Color ne√≥n para el t√≠tulo de secci√≥n
    SectionTitle.Text = title
    SectionTitle.TextXAlignment = Enum.TextXAlignment.Left

    -- L√≠nea ne√≥n inferior
    local NeonLine = Instance.new("Frame")
    NeonLine.Name = "NeonLine"
    NeonLine.Parent = SectionFrame
    NeonLine.BackgroundColor3 = NEON_COLOR_1
    NeonLine.Size = UDim2.new(1, -20, 0, 2)
    NeonLine.Position = UDim2.new(0, 10, 1, -5)
    
    -- Efecto ne√≥n de brillo
    local UIStroke = Instance.new("UIStroke")
    UIStroke.Parent = SectionFrame
    UIStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    UIStroke.Color = NEON_COLOR_1
    UIStroke.Thickness = 2
    UIStroke.Transparency = 0.5

    -- Un UIListLayout para organizar los elementos dentro de la secci√≥n
    local SectionListLayout = Instance.new("UIListLayout")
    SectionListLayout.Parent = SectionFrame
    SectionListLayout.FillDirection = Enum.FillDirection.Vertical
    SectionListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    SectionListLayout.Padding = UDim.new(0, 5)
    SectionListLayout.SortOrder = Enum.SortOrder.LayoutOrder
    SectionListLayout.Parent = SectionFrame

    -- Ajusta la altura de la secci√≥n autom√°ticamente
    SectionListLayout.Changed:Connect(function(property)
        if property == "AbsoluteContentSize" then
            SectionFrame.Size = UDim2.new(1, 0, 0, SectionListLayout.AbsoluteContentSize.Y + 10) -- +10 para padding
        end
    end)
    
    return SectionFrame -- Retorna el frame de la secci√≥n para a√±adir elementos
end

-- [[ FUNCIONES B√ÅSICAS DE ELEMENTOS UI (EJEMPLOS) ]]
local function CreateToggleButton(parentFrame, text, initialState, onClick)
    local ToggleFrame = Instance.new("Frame")
    ToggleFrame.Name = text:gsub(" ", "") .. "Toggle"
    ToggleFrame.Parent = parentFrame
    ToggleFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    ToggleFrame.Size = UDim2.new(1, -20, 0, 30) -- Ajuste de tama√±o para botones
    ToggleFrame.Position = UDim2.new(0, 10, 0, 0) -- Centrado
    ToggleFrame.BorderSizePixel = 0
    UICorner_Main:Clone().Parent = ToggleFrame

    local ToggleText = Instance.new("TextLabel")
    ToggleText.Parent = ToggleFrame
    ToggleText.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    ToggleText.BackgroundTransparency = 1
    ToggleText.Size = UDim2.new(0.8, 0, 1, 0)
    ToggleText.Position = UDim2.new(0, 5, 0, 0)
    ToggleText.Font = Enum.Font.Gotham
    ToggleText.TextSize = 14
    ToggleText.TextColor3 = Color3.fromRGB(255, 255, 255)
    ToggleText.Text = text
    ToggleText.TextXAlignment = Enum.TextXAlignment.Left

    local ToggleButton = Instance.new("TextButton")
    ToggleButton.Name = "ToggleButton"
    ToggleButton.Parent = ToggleFrame
    ToggleButton.BackgroundColor3 = initialState and NEON_COLOR_1 or Color3.fromRGB(80, 80, 80)
    ToggleButton.Size = UDim2.new(0, 20, 0, 20)
    ToggleButton.Position = UDim2.new(1, -25, 0.5, -10)
    ToggleButton.Font = Enum.Font.GothamBold
    ToggleButton.TextSize = 14
    ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    ToggleButton.Text = initialState and "ON" or "OFF"
    UICorner_Main:Clone().Parent = ToggleButton

    local currentState = initialState
    ToggleButton.MouseButton1Click:Connect(function()
        currentState = not currentState
        ToggleButton.BackgroundColor3 = currentState and NEON_COLOR_1 or Color3.fromRGB(80, 80, 80)
        ToggleButton.Text = currentState and "ON" or "OFF"
        if onClick then onClick(currentState) end
    end)
    return ToggleFrame -- Devuelve el frame para ajustar LayoutOrder
end

local function CreateSlider(parentFrame, text, min, max, initial, onValueChanged)
    local SliderFrame = Instance.new("Frame")
    SliderFrame.Name = text:gsub(" ", "") .. "Slider"
    SliderFrame.Parent = parentFrame
    SliderFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    SliderFrame.Size = UDim2.new(1, -20, 0, 50)
    SliderFrame.Position = UDim2.new(0, 10, 0, 0)
    SliderFrame.BorderSizePixel = 0
    UICorner_Main:Clone().Parent = SliderFrame

    local SliderText = Instance.new("TextLabel")
    SliderText.Parent = SliderFrame
    SliderText.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    SliderText.BackgroundTransparency = 1
    SliderText.Size = UDim2.new(0.7, 0, 0.5, 0)
    SliderText.Position = UDim2.new(0, 5, 0, 0)
    SliderText.Font = Enum.Font.Gotham
    SliderText.TextSize = 14
    SliderText.TextColor3 = Color3.fromRGB(255, 255, 255)
    SliderText.Text = text
    SliderText.TextXAlignment = Enum.TextXAlignment.Left

    local ValueLabel = Instance.new("TextLabel")
    ValueLabel.Parent = SliderFrame
    ValueLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    ValueLabel.BackgroundTransparency = 1
    ValueLabel.Size = UDim2.new(0.2, 0, 0.5, 0)
    ValueLabel.Position = UDim2.new(0.7, 0, 0, 0)
    ValueLabel.Font = Enum.Font.Gotham
    ValueLabel.TextSize = 14
    ValueLabel.TextColor3 = NEON_COLOR_3
    ValueLabel.Text = tostring(initial)

    local Slider = Instance.new("Slider")
    Slider.Name = "Slider"
    Slider.Parent = SliderFrame
    Slider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    Slider.BorderColor3 = NEON_COLOR_1
    Slider.BorderSizePixel = 1
    Slider.Size = UDim2.new(1, -20, 0, 10)
    Slider.Position = UDim2.new(0, 10, 0.5, 0)
    Slider.Value = (initial - min) / (max - min) -- Normalize value
    Slider.Minimum = min
    Slider.Maximum = max
    UICorner_Main:Clone().Parent = Slider

    Slider.Changed:Connect(function(property)
        if property == "Value" then
            local currentValue = min + (max - min) * Slider.Value
            ValueLabel.Text = tostring(math.floor(currentValue * 10) / 10) -- Redondear a un decimal
            if onValueChanged then onValueChanged(currentValue) end
        end
    end)
    return SliderFrame
end


