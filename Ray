-- [[ LUIS HUD - SISTEMA PERSIANA NEÃ“N ]]
local ScreenGui = Instance.new("ScreenGui")
local Main = Instance.new("Frame")
local Header = Instance.new("Frame")
local Sidebar = Instance.new("Frame")
local Container = Instance.new("Frame")

ScreenGui.Parent = game:GetService("CoreGui")
ScreenGui.Name = "LuisPro_Unv"

-- [[ CUERPO PRINCIPAL ]]
Main.Name = "Main"
Main.Parent = ScreenGui
Main.BackgroundColor3 = Color3.fromRGB(12, 12, 12)
Main.Position = UDim2.new(0.5, -250, 0.5, -175)
Main.Size = UDim2.new(0, 520, 0, 350)
Main.Active = true
Main.Draggable = true
Main.ClipsDescendants = true -- Esto hace que el contenido se oculte al encogerse

local MainCorner = Instance.new("UICorner", Main)
MainCorner.CornerRadius = UDim.new(0, 10)

local MainStroke = Instance.new("UIStroke", Main)
MainStroke.Thickness = 3
MainStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
MainStroke.Transparency = 0.2

-- [[ HEADER (LA BARRA QUE SE QUEDA AL MINIMIZAR) ]]
Header.Name = "Header"
Header.Parent = Main
Header.BackgroundColor3 = Color3.fromRGB(22, 22, 22)
Header.Size = UDim2.new(1, 0, 0, 40)
Header.BorderSizePixel = 0

local Title = Instance.new("TextLabel", Header)
Title.Name = "Title"
Title.Text = "SCRIPTðŸ˜ˆUNVðŸ˜ˆLUIS"
Title.Size = UDim2.new(1, -100, 1, 0)
Title.Position = UDim2.new(0, 15, 0, 0)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.new(1, 1, 1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 16
Title.TextXAlignment = Enum.TextXAlignment.Left

-- [[ ELEMENTOS QUE SE OCULTAN (SIDEBAR Y CONTENIDO) ]]
Sidebar.Name = "Sidebar"
Sidebar.Parent = Main
Sidebar.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
Sidebar.Position = UDim2.new(0, 5, 0, 45)
Sidebar.Size = UDim2.new(0, 140, 1, -50)
Instance.new("UICorner", Sidebar).CornerRadius = UDim.new(0, 8)

Container.Name = "Container"
Container.Parent = Main
Container.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Container.Position = UDim2.new(0, 150, 0, 45)
Container.Size = UDim2.new(1, -155, 1, -50)
Instance.new("UICorner", Container).CornerRadius = UDim.new(0, 8)

-- [[ BOTONES DE CONTROL ]]
local Close = Instance.new("TextButton", Header)
Close.Size = UDim2.new(0, 28, 0, 28)
Close.Position = UDim2.new(1, -35, 0.5, -14)
Close.BackgroundColor3 = Color3.fromRGB(180, 40, 40)
Close.Text = "X"
Close.TextColor3 = Color3.new(1, 1, 1)
Close.Font = Enum.Font.GothamBold
Instance.new("UICorner", Close).CornerRadius = UDim.new(0, 6)

local Minimize = Instance.new("TextButton", Header)
Minimize.Size = UDim2.new(0, 28, 0, 28)
Minimize.Position = UDim2.new(1, -70, 0.5, -14)
Minimize.BackgroundColor3 = Color3.fromRGB(180, 130, 40)
Minimize.Text = "-"
Minimize.TextColor3 = Color3.new(1, 1, 1)
Minimize.Font = Enum.Font.GothamBold
Instance.new("UICorner", Minimize).CornerRadius = UDim.new(0, 6)

-- [[ LÃ“GICA DE MINIMIZADO ]]
local isMinimized = false

Minimize.MouseButton1Click:Connect(function()
    if not isMinimized then
        -- Se encoge el HUD dejando solo el Header
        Main:TweenSize(UDim2.new(0, 520, 0, 40), "Out", "Quart", 0.4, true)
        Minimize.Text = "+"
    else
        -- Se expande a su tamaÃ±o normal
        Main:TweenSize(UDim2.new(0, 520, 0, 350), "Out", "Quart", 0.4, true)
        Minimize.Text = "-"
    end
    isMinimized = not isMinimized
end)

Close.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

-- [[ EFECTO NEÃ“N CON MOVIMIENTO ]]
task.spawn(function()
    while task.wait(0.01) do
        local hue = (tick() % 5 / 5)
        local neonColor = Color3.fromHSV(hue, 0.8, 1)
        MainStroke.Color = neonColor
        -- TambiÃ©n le damos un toque de color al texto del tÃ­tulo para que resalte
        Title.TextColor3 = neonColor
    end
end)

print("HUD SCRIPT UNV LUIS Cargado con Ã©xito âœ…")
