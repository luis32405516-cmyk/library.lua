-- [[ LUIS HUD - DISE√ëO COMPACTO CON SCROLL VISIBLE ]]
local ScreenGui = Instance.new("ScreenGui")
local Main = Instance.new("Frame")
local Header = Instance.new("Frame")
local Sidebar = Instance.new("ScrollingFrame") -- Con Scroll
local Container = Instance.new("ScrollingFrame") -- Con Scroll

ScreenGui.Parent = game:GetService("CoreGui")
ScreenGui.Name = "LuisPro_Unv_Compact"

-- [[ CUERPO PRINCIPAL (M√ÅS PEQUE√ëO) ]]
Main.Name = "Main"
Main.Parent = ScreenGui
Main.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
Main.Position = UDim2.new(0.5, -200, 0.5, -150)
Main.Size = UDim2.new(0, 450, 0, 300) -- Reducido de 520x350 a 450x300
Main.Active = true
Main.Draggable = true
Main.ClipsDescendants = true

local MainStroke = Instance.new("UIStroke", Main)
MainStroke.Thickness = 3
MainStroke.Transparency = 0.2
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 10)

-- [[ HEADER (T√çTULO CENTRADO) ]]
Header.Name = "Header"
Header.Parent = Main
Header.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Header.Size = UDim2.new(1, 0, 0, 35)

local Title = Instance.new("TextLabel", Header)
Title.Name = "Title"
Title.Text = "SCRIPTüòàUNVüòàLUIS"
Title.Size = UDim2.new(1, 0, 1, 0)
Title.Position = UDim2.new(0, 0, 0, 0)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14
Title.TextXAlignment = Enum.TextXAlignment.Center -- T√çTULO AL CENTRO

-- [[ SIDEBAR CON SCROLL VISIBLE (IZQUIERDA) ]]
Sidebar.Name = "Sidebar"
Sidebar.Parent = Main
Sidebar.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Sidebar.Position = UDim2.new(0, 5, 0, 40)
Sidebar.Size = UDim2.new(0, 120, 1, -45)
Sidebar.CanvasSize = UDim2.new(0, 0, 2, 0) -- Contenido largo para probar scroll
Sidebar.ScrollBarThickness = 4 -- BARRA VISIBLE
Sidebar.ScrollBarImageColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", Sidebar).CornerRadius = UDim.new(0, 8)

local SidebarList = Instance.new("UIListLayout", Sidebar)
SidebarList.Padding = UDim.new(0, 5)
SidebarList.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- [[ CONTAINER CON SCROLL VISIBLE (CENTRO) ]]
Container.Name = "Container"
Container.Parent = Main
Container.BackgroundColor3 = Color3.fromRGB(22, 22, 22)
Container.Position = UDim2.new(0, 130, 0, 40)
Container.Size = UDim2.new(1, -135, 1, -45)
Container.CanvasSize = UDim2.new(0, 0, 3, 0) -- Contenido muy largo
Container.ScrollBarThickness = 5 -- BARRA VISIBLE
Container.ScrollBarImageColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", Container).CornerRadius = UDim.new(0, 8)

local ContainerList = Instance.new("UIListLayout", Container)
ContainerList.Padding = UDim.new(0, 8)
ContainerList.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- [[ BOTONES DE PRUEBA (Para ver el scroll movi√©ndose) ]]
for i = 1, 15 do
    local b = Instance.new("TextLabel", Container)
    b.Size = UDim2.new(0.9, 0, 0, 30)
    b.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    b.Text = "Bot√≥n Relleno " .. i
    b.TextColor3 = Color3.new(1, 1, 1)
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 5)
end

-- [[ BOTONES CONTROL ]]
local Close = Instance.new("TextButton", Header)
Close.Size = UDim2.new(0, 22, 0, 22)
Close.Position = UDim2.new(1, -30, 0.5, -11)
Close.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
Close.Text = "X"
Close.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", Close).CornerRadius = UDim.new(1, 0)

local Minimize = Instance.new("TextButton", Header)
Minimize.Size = UDim2.new(0, 22, 0, 22)
Minimize.Position = UDim2.new(1, -55, 0.5, -11)
Minimize.BackgroundColor3 = Color3.fromRGB(150, 120, 0)
Minimize.Text = "-"
Minimize.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", Minimize).CornerRadius = UDim.new(1, 0)

-- [[ L√ìGICA MINIMIZAR ]]
local isMinimized = false
Minimize.MouseButton1Click:Connect(function()
    if not isMinimized then
        Main:TweenSize(UDim2.new(0, 450, 0, 35), "Out", "Quart", 0.3, true)
        Minimize.Text = "+"
    else
        Main:TweenSize(UDim2.new(0, 450, 0, 300), "Out", "Quart", 0.3, true)
        Minimize.Text = "-"
    end
    isMinimized = not isMinimized
end)

Close.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

-- [[ EFECTO NE√ìN ]]
task.spawn(function()
    while task.wait(0.01) do
        local h = (tick() % 5 / 5)
        local c = Color3.fromHSV(h, 0.8, 1)
        MainStroke.Color = c
        Title.TextColor3 = c
        Container.ScrollBarImageColor3 = c -- La barra de scroll tambi√©n brilla
    end
end)

print("HUD Compacto con Scroll visible listo ‚úÖ")
