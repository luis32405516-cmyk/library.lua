Spacer.Size = UDim2.new(1, 0, 0, 55)
Spacer.BackgroundTransparency = 1

local function AddTab(name)
    local t = Instance.new("TextButton", Sidebar)
    t.Size = UDim2.new(0.9, 0, 0, 28)
    t.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    t.Text = name
    t.TextColor3 = Color3.new(0.8, 0.8, 0.8)
    t.Font = Enum.Font.GothamSemibold
    t.TextSize = 10
    Instance.new("UICorner", t).CornerRadius = UDim.new(0, 5)
    t.MouseButton1Click:Connect(function() Notify("PestaÃ±a: " .. name) end)
end

AddTab("âš¡ Movimiento")
AddTab("ðŸ’€ Combate")
AddTab("ðŸ› ï¸ Sistema")
AddTab("ðŸŽ¨ Visuales")

-- [[ CONTAINER CENTRAL CON FONDO NEÃ“N ANIMADO ]]
Container.Name = "Container"
Container.Parent = Main
Container.BackgroundColor3 = Color3.fromRGB(18, 18, 18) -- Base oscura
Container.Position = UDim2.new(0, 120, 0, 38)
Container.Size = UDim2.new(1, -125, 1, -43)
Container.CanvasSize = UDim2.new(0, 0, 4, 0)
Container.ScrollBarThickness = 3
Container.ScrollBarImageColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", Container).CornerRadius = UDim.new(0, 8)

-- EFECTO DE RAYAS NEÃ“N ANIMADAS EN EL FONDO DEL CONTAINER
local NeonBackgroundEffect = Instance.new("Frame", Container)
NeonBackgroundEffect.Name = "NeonBackgroundEffect"
NeonBackgroundEffect.Size = UDim2.new(1, 0, 1, 0)
NeonBackgroundEffect.BackgroundTransparency = 0.7 -- Transparencia para ver el contenido
NeonBackgroundEffect.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Color base (negro transparente)

-- Un "degradado" con UIListLayout para simular las rayas
local GradientLayout = Instance.new("UIListLayout", NeonBackgroundEffect)
GradientLayout.FillDirection = Enum.FillDirection.Horizontal
GradientLayout.HorizontalAlignment = Enum.HorizontalAlignment.Left
GradientLayout.Padding = UDim.new(0, 0) -- Sin padding para que las rayas estÃ©n juntas

for i = 1, 5 do -- 5 rayas de prueba
    local NeonStrip = Instance.new("Frame", NeonBackgroundEffect)
    NeonStrip.Name = "Strip" .. i
    NeonStrip.Size = UDim2.new(0.2, 0, 1, 0) -- Cada raya ocupa 20% del ancho
    NeonStrip.BackgroundTransparency = 0.8
    NeonStrip.BackgroundColor3 = Color3.fromHSV(i/5, 0.8, 1) -- Colores diferentes para cada raya
    NeonStrip.ZIndex = 0 -- Asegura que estÃ© detrÃ¡s del contenido
end

-- ANIMACIÃ“N DE LAS RAYAS (DESPLAZAMIENTO HORIZONTAL)
task.spawn(function()
    local strips = NeonBackgroundEffect:GetChildren()
    local speed = 0.005 -- Velocidad de desplazamiento
    while task.wait() do
        for _, strip in pairs(strips) do
            if strip:IsA("Frame") and strip.Name:find("Strip") then
                strip.Position = strip.Position + UDim2.new(speed, 0, 0, 0)
                if strip.Position.X.Scale >= 1 then -- Si se sale de la pantalla por la derecha
                    strip.Position = UDim2.new(-1, 0, strip.Position.Y.Scale, strip.Position.Y.Offset) -- Vuelve al inicio por la izquierda
                end
            end
        end
    end
end)


local ContainerList = Instance.new("UIListLayout", Container)
ContainerList.Padding = UDim.new(0, 6)
ContainerList.HorizontalAlignment = Enum.HorizontalAlignment.Center

for i = 1, 10 do -- Menos opciones de prueba para ver el fondo
    local f = Instance.new("Frame", Container)
    f.Size = UDim2.new(0.9, 0, 0, 25)
    f.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    local l = Instance.new("TextLabel", f)
    l.Size = UDim2.new(1, 0, 1, 0)
    l.Text = "Opcion " .. i
    l.BackgroundTransparency = 1
    l.TextColor3 = Color3.new(0.8, 0.8, 0.8)
    l.TextSize = 10
    Instance.new("UICorner", f).CornerRadius = UDim.new(0, 4)
end

-- [[ CONTROLES ]]
local Close = Instance.new("TextButton", Header)
Close.Size = UDim2.new(0, 20, 0, 20)
Close.Position = UDim2.new(1, -25, 0.5, -10)
Close.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
Close.Text = "X"
Instance.new("UICorner", Close).CornerRadius = UDim.new(1, 0)
Close.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

local Minimize = Instance.new("TextButton", Header)
Minimize.Size = UDim2.new(0, 20, 0, 20)
Minimize.Position = UDim2.new(1, -50, 0.5, -10)
Minimize.BackgroundColor3 = Color3.fromRGB(150, 120, 0)
Minimize.Text = "-"
Instance.new("UICorner", Minimize).CornerRadius = UDim.new(1, 0)

local min = false
Minimize.MouseButton1Click:Connect(function()
    if not min then
        Main:TweenSize(UDim2.new(0, 380, 0, 32), "Out", "Quart", 0.3, true)
        Minimize.Text = "+"
    else
        Main:TweenSize(UDim2.new(0, 380, 0, 260), "Out", "Quart", 0.3, true)
        Minimize.Text = "-"
    end
    min = not min
end)

-- [[ EFECTO NEÃ“N SINCRONIZADO ]]
task.spawn(function()
    while task.wait(0.01) do
        local h = (tick() % 5 / 5)
        local c = Color3.fromHSV(h, 0.8, 1)
        MainStroke.Color = c
        Title.TextColor3 = c
        AvatarStroke.Color = c
        -- NOTA: El NeonBackgroundEffect es independiente para un movimiento constante
    end
end)

Notify("HUD listo con fondo neÃ³n animado ðŸ”¥", Color3.fromRGB(0, 255, 255))
