-- [[ L√ìGICA DE EFECTO NE√ìN EN EL BORDE PRINCIPAL ]]
local UICorner_MainFrame = Instance.new("UICorner")
UICorner_MainFrame.CornerRadius = UDim.new(0, 10)
UICorner_MainFrame.Parent = MainFrame

local UIStroke_MainFrame = Instance.new("UIStroke")
UIStroke_MainFrame.Parent = MainFrame
UIStroke_MainFrame.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
UIStroke_MainFrame.Thickness = 2
UIStroke_MainFrame.Transparency = 0.5

-- Animaci√≥n de Color Ne√≥n para el borde principal
task.spawn(function()
    while true do
        for i = 0, 1, 0.05 do
            UIStroke_MainFrame.Color = Color3.fromHSV(i, 1, 1)
            task.wait(0.05)
        end
    end
end)

-- Notificaci√≥n de carga (ejemplo)
local NotifyFrame = Instance.new("Frame")
NotifyFrame.Name = "Notification"
NotifyFrame.Parent = ScreenGui
NotifyFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
NotifyFrame.Size = UDim2.new(0, 250, 0, 40)
NotifyFrame.Position = UDim2.new(0.5, -125, 1, -50) -- Abajo al centro
NotifyFrame.BorderColor3 = NEON_COLOR_1
NotifyFrame.BorderSizePixel = 2
NotifyFrame.Visible = false

local NotifyText = Instance.new("TextLabel")
NotifyText.Parent = NotifyFrame
NotifyText.BackgroundTransparency = 1
NotifyText.Size = UDim2.new(1, 0, 1, 0)
NotifyText.Font = Enum.Font.GothamSemibold
NotifyText.TextSize = 14
NotifyText.TextColor3 = Color3.fromRGB(255, 255, 255)
NotifyText.Text = ""

UICorner_Main:Clone().Parent = NotifyFrame

-- Funci√≥n de Notificaci√≥n (similar a tu hud:Notify)
local function Notify(message)
    NotifyText.Text = message
    NotifyFrame.Visible = true
    TweenService:Create(NotifyFrame, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Position = UDim2.new(0.5, -125, 1, -90)}):Play()
    task.wait(3)
    TweenService:Create(NotifyFrame, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Position = UDim2.new(0.5, -125, 1, -50)}):Play()
    task.wait(0.5)
    NotifyFrame.Visible = false
end

-- Lanzar la notificaci√≥n de carga al iniciar
Notify("LUIS SCRIPT - DISE√ëO NE√ìN CARGADO ‚úÖ")

-- Tu l√≥gica de Fly, Noclip, Anti-AFK, etc., deber√° ir dentro de los callbacks de los botones.
-- Por ejemplo, el ToggleButton de "FLY MOBILE (IY)" llamar√≠a a tu funci√≥n mobilefly/unmobilefly.
-- Este es solo el dise√±o, la integraci√≥n de tus funciones viene ahora.
