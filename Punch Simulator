local RainbowUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/luis32405516-cmyk/library.lua/refs/heads/main/Prueba2"))()
local hud = RainbowUI:CreateWindow(230, 260)

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local event = ReplicatedStorage:WaitForChild("Events"):WaitForChild("DamageIncreaseOnClickEvent")

local fFarm = hud:AddFolder("AUTO CLICKER ü•ä")

-- Variables de control
local autoClickEnabled = false
local clickWaitTime = 0.1 -- Velocidad por defecto

-- Bot√≥n para activar/desactivar
fFarm:AddButton("AUTO CLICK: OFF", function(self)
    autoClickEnabled = not autoClickEnabled
    
    -- Actualizar el texto del bot√≥n de forma visual
    if autoClickEnabled then
        hud:Notify("Auto-Click Iniciado", 2)
    else
        hud:Notify("Auto-Click Detenido", 2)
    end
    
    -- Bucle de clics
    task.spawn(function()
        while autoClickEnabled do
            event:FireServer()
            task.wait(clickWaitTime)
        end
    end)
end)

-- Slider para la velocidad (Aumentar velocidad de clics)
-- Un valor menor (0.01) es mucho m√°s r√°pido que uno mayor (1.0)
fFarm:AddSlider("VELOCIDAD (MENOR = R√ÅPIDO)", 0.01, 1, 0.1, function(value)
    clickWaitTime = value
end)

-- Bot√≥n de utilidad para moverte m√°s r√°pido por el mapa
hud:AddButton("VELOCIDAD JUGADOR ‚ö°", function()
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 50
    hud:Notify("Velocidad de caminata aumentada", 2)
end)
