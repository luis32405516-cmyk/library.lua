-- Cargando tu librer√≠a desde GitHub
local RainbowUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/luis32405516-cmyk/library.lua/refs/heads/main/Prueba2"))()
local hud = RainbowUI:CreateWindow(230, 260)

-- Referencias de servicios y eventos (Verificado)
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local clickEvent = ReplicatedStorage:WaitForChild("Events"):WaitForChild("DamageIncreaseOnClickEvent")

-- Variables de estado
local state = {
    autoClick = false,
    speed = 0.1
}

-- Carpeta Principal
local fFarm = hud:AddFolder("AUTO CLICKER ü•ä")

-- Funci√≥n de Auto-Click optimizada
local function startAutoClick()
    task.spawn(function()
        while state.autoClick do
            clickEvent:FireServer()
            task.wait(state.speed)
        end
    end)
end

-- Bot√≥n de Activaci√≥n
fFarm:AddButton("ALTERNAR AUTO-CLICK", function()
    state.autoClick = not state.autoClick
    
    if state.autoClick then
        hud:Notify("Auto-Click: ACTIVADO ‚úÖ", 2)
        startAutoClick()
    else
        hud:Notify("Auto-Click: DESACTIVADO ‚ùå", 2)
    end
end)

-- Slider de Velocidad (Ajuste fino)
fFarm:AddSlider("VELOCIDAD (0.01 = MAX)", 0.01, 0.5, 0.1, function(value)
    state.speed = value
end)

-- Utilidad adicional
hud:AddButton("VELOCIDAD JUGADOR ‚ö°", function()
    local char = game.Players.LocalPlayer.Character
    if char and char:FindFirstChild("Humanoid") then
        char.Humanoid.WalkSpeed = 60
        hud:Notify("Velocidad: 60", 1)
    end
end)
