local RainbowUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/luis32405516-cmyk/library.lua/refs/heads/main/Prueba2?v=" .. tick()))()
local hud = RainbowUI:CreateWindow(240, 420)

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

local state = { fly = false, noclip = false, speed = 16 }

-- CARPETA AJUSTES
local fMov = hud:AddFolder("AJUSTES PERSONAJE ⚙️")

-- BOTÓN FLY (VOLAR)
fMov:AddButton("VOLAR (FLY)", function()
    state.fly = not state.fly
    local bodyVel = character.PrimaryPart:FindFirstChild("FlyVel") or Instance.new("BodyVelocity", character.PrimaryPart)
    bodyVel.Name = "FlyVel"
    bodyVel.MaxForce = state.fly and Vector3.new(1e6, 1e6, 1e6) or Vector3.new(0,0,0)
    
    task.spawn(function()
        while state.fly do
            bodyVel.Velocity = workspace.CurrentCamera.CFrame.LookVector * 50
            task.wait()
        end
        bodyVel:Destroy()
    end)
end)

-- BOTÓN NOCLIP (ATRAVESAR)
fMov:AddButton("NOCLIP (ATRAVESAR)", function()
    state.noclip = not state.noclip
    game:GetService("RunService").Stepped:Connect(function()
        if state.noclip then
            for _, part in pairs(character:GetDescendants()) do
                if part:IsA("BasePart") then part.CanCollide = false end
            end
        end
    end)
end)

fMov:AddSlider("VELOCIDAD", 16, 300, 16, function(v)
    if character:FindFirstChildOfClass("Humanoid") then
        character:FindFirstChildOfClass("Humanoid").WalkSpeed = v
    end
end)

fMov:AddSlider("SALTO", 50, 500, 50, function(v)
    local h = character:FindFirstChildOfClass("Humanoid")
    if h then h.JumpPower = v h.UseJumpPower = true end
end)
