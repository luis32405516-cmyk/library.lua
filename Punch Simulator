local RainbowUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/luis32405516-cmyk/library.lua/refs/heads/main/Prueba2?v=" .. tick()))()
local hud = RainbowUI:CreateWindow(240, 520)

local player = game.Players.LocalPlayer
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

-- Variables de estado id茅nticas al original
local state = { 
    fly = false, 
    speed = 70, 
    currentVel = Vector3.zero,
    easing = 6,
    noclip = false
}

local bv, bg, flyConn

local fMov = hud:AddFolder("AJUSTES PERSONAJE 锔")

-- LGICA DE VUELO NTEGRA DEL SCRIPT ORIGINAL
local function flightLogic(dt)
    if not state.fly then return end
    
    local char = player.Character
    local hum = char and char:FindFirstChildOfClass("Humanoid")
    local root = char and char:FindFirstChild("HumanoidRootPart")
    local camera = workspace.CurrentCamera
    
    if not root or not bv or not bg then return end

    local dir = Vector3.zero
    local cam = camera.CFrame
    local moveVector = Vector3.zero

    -- Captura de PC (WASD) - L贸gica original
    if UserInputService.KeyboardEnabled then
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then dir += cam.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then dir -= cam.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then dir -= cam.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then dir += cam.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.Space) then dir += Vector3.yAxis end
        if UserInputService:IsKeyDown(Enum.KeyCode.LeftControl) then dir -= Vector3.yAxis end
    end

    -- Captura de Mobile (Joystick) - L贸gica original
    if UserInputService.TouchEnabled and hum.MoveDirection.Magnitude > 0 then
        moveVector = hum.MoveDirection
    end

    -- Combinaci贸n de vectores (Igual al original)
    local total = dir + moveVector
    if total.Magnitude > 0 then 
        total = total.Unit * state.speed 
    end

    -- Aplicaci贸n de Suavizado (Lerp)
    state.currentVel = state.currentVel:Lerp(total, math.clamp(state.easing * dt, 0, 1))
    
    -- Aplicaci贸n de fuerzas al cuerpo
    bv.Velocity = state.currentVel
    
    -- Rotaci贸n: Sigue la direcci贸n del movimiento o la c谩mara si est谩 quieto
    bg.CFrame = CFrame.new(Vector3.zero, state.currentVel.Magnitude > 0 and state.currentVel.Unit or cam.LookVector)
end

-- Bot贸n de Fly con Setup y Cleanup completo
fMov:AddButton("VOLAR (FLY FLEW V3)", function()
    state.fly = not state.fly
    local char = player.Character
    local root = char and char:FindFirstChild("HumanoidRootPart")
    local hum = char and char:FindFirstChildOfClass("Humanoid")

    if state.fly and root and hum then
        hud:Notify("Fly: ACTIVADO ")
        
        -- Setup de fuerzas id茅ntico al original
        bv = Instance.new("BodyVelocity")
        bv.MaxForce = Vector3.new(1e5, 1e5, 1e5)
        bv.Velocity = Vector3.zero
        bv.Parent = root

        bg = Instance.new("BodyGyro")
        bg.MaxTorque = Vector3.new(1e5, 1e5, 1e5)
        bg.P = 9e4
        bg.Parent = root
        
        hum.PlatformStand = true
        flyConn = RunService.Heartbeat:Connect(flightLogic)
    else
        hud:Notify("Fly: DESACTIVADO ")
        -- Cleanup completo para evitar que el mu帽eco se bloquee
        if flyConn then flyConn:Disconnect() flyConn = nil end
        if bv then bv:Destroy() bv = nil end
        if bg then bg:Destroy() bg = nil end
        if hum then hum.PlatformStand = false end
        state.currentVel = Vector3.zero
    end
end)

-- Slider vinculado directamente a la velocidad del Fly
fMov:AddSlider("VELOCIDAD VUELO", 10, 400, 70, function(v)
    state.speed = v
end)

-- Funciones adicionales solicitadas con sus notificaciones
fMov:AddButton("NOCLIP (ATRAVESAR)", function()
    state.noclip = not state.noclip
    hud:Notify(state.noclip and "Noclip: ON " or "Noclip: OFF П")
    local nc; nc = RunService.Stepped:Connect(function()
        if not state.noclip then nc:Disconnect() return end
        if player.Character then
            for _, v in pairs(player.Character:GetDescendants()) do
                if v:IsA("BasePart") then v.CanCollide = false end
            end
        end
    end)
end)

fMov:AddSlider("VELOCIDAD CAMINAR", 16, 500, 16, function(v)
    if player.Character and player.Character:FindFirstChild("Humanoid") then 
        player.Character.Humanoid.WalkSpeed = v 
    end
end)

fMov:AddSlider("FUERZA SALTO", 50, 600, 50, function(v)
    if player.Character and player.Character:FindFirstChild("Humanoid") then 
        player.Character.Humanoid.JumpPower = v
        player.Character.Humanoid.UseJumpPower = true
    end
end)
