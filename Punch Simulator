local RainbowUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/luis32405516-cmyk/library.lua/refs/heads/main/Prueba2"))()
local hud = RainbowUI:CreateWindow(230, 320)

local events = game:GetService("ReplicatedStorage"):WaitForChild("Events")
local clickRemote = events:WaitForChild("DamageIncreaseOnClickEvent")
local winRemote = events:WaitForChild("PushEvent")

local settings = {
    autoClick = false,
    autoWin = false,
    clickDelay = 0.1,
    winDelay = 0 -- Velocidad M√°xima (Instant√°nea)
}

local farm = hud:AddFolder("AUTO FARM ü•ä")

-- Bucle de Auto-Click
local function doClick()
    task.spawn(function()
        while settings.autoClick do
            clickRemote:FireServer()
            task.wait(settings.clickDelay)
        end
    end)
end

-- Bucle de Auto-Win (Velocidad 0)
local function doWin()
    task.spawn(function()
        local arg = {true}
        while settings.autoWin do
            winRemote:FireServer(unpack(arg))
            task.wait(settings.winDelay)
        end
    end)
end

farm:AddButton("AUTO CLICK: ON/OFF", function()
    settings.autoClick = not settings.autoClick
    hud:Notify("Clicker: " .. (settings.autoClick and "ON" or "OFF"), 1)
    if settings.autoClick then doClick() end
end)

farm:AddButton("GANAR PELEA üèÜ", function()
    settings.autoWin = not settings.autoWin
    hud:Notify("Win: " .. (settings.autoWin and "ON" or "OFF"), 1)
    if settings.autoWin then doWin() end
end)

local config = hud:AddFolder("CONFIGURACI√ìN ‚öôÔ∏è")

config:AddButton("CLICK M√ÅXIMO (0.01)", function() 
    settings.clickDelay = 0.01 
    hud:Notify("Click al m√°ximo", 1)
end)

hud:AddButton("VELOCIDAD üèÉ", function()
    local h = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
    if h then h.WalkSpeed = 100 end
end)
