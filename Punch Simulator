local RainbowUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/luis32405516-cmyk/library.lua/refs/heads/main/Prueba2?v=" .. tick()))()
local hud = RainbowUI:CreateWindow(240, 520)

local player = game.Players.LocalPlayer
local RunService = game:GetService("RunService")
local state = { fly = false, flySpeed = 1, noclip = false }

local fMov = hud:AddFolder("AJUSTES PERSONAJE âš™ï¸")

-- 1. FLY (CONTROL TOTAL V3)
fMov:AddButton("VOLAR (FLY)", function()
    state.fly = not state.fly
    local char = player.Character
    if not char then return end
    local hum = char:FindFirstChildOfClass("Humanoid")
    
    if state.fly then
        hud:Notify("Fly: ACTIVADO ðŸš€")
        local states = Enum.HumanoidStateType:GetEnumItems()
        for _, s in pairs(states) do hum:SetStateEnabled(s, false) end
        hum:ChangeState(Enum.HumanoidStateType.Swimming)
        char.Animate.Disabled = true
        
        task.spawn(function()
            while state.fly and char:Parent() do
                RunService.Heartbeat:Wait()
                if hum.MoveDirection.Magnitude > 0 then
                    for i = 1, state.flySpeed do
                        char:TranslateBy(hum.MoveDirection)
                    end
                end
                char.HumanoidRootPart.Velocity = Vector3.new(0, 0.1, 0)
            end
            -- Reset al apagar
            char.Animate.Disabled = false
            for _, s in pairs(states) do hum:SetStateEnabled(s, true) end
            hum:ChangeState(Enum.HumanoidStateType.Running)
        end)
    else
        hud:Notify("Fly: DESACTIVADO ðŸ›‘")
    end
end)

-- 2. SLIDER PARA VELOCIDAD DE VUELO
fMov:AddSlider("FUERZA VUELO", 1, 20, 1, function(v)
    state.flySpeed = v
end)

-- 3. NOCLIP (BOTÃ“N ÃšNICO)
fMov:AddButton("NOCLIP (ATRAVESAR)", function()
    state.noclip = not state.noclip
    if state.noclip then
        hud:Notify("Noclip: ACTIVADO ðŸ‘»")
        RunService.Stepped:Connect(function()
            if state.noclip and player.Character then
                for _, p in pairs(player.Character:GetDescendants()) do
                    if p:IsA("BasePart") then p.CanCollide = false end
                end
            end
        end)
    else
        hud:Notify("Noclip: DESACTIVADO ðŸ§±")
    end
end)

-- 4. SPEED (VELOCIDAD CAMINAR CON SLIDER)
fMov:AddSlider("VELOCIDAD CAMINAR", 16, 500, 16, function(v)
    if player.Character and player.Character:FindFirstChild("Humanoid") then 
        player.Character.Humanoid.WalkSpeed = v 
    end
end)

-- 5. JUMP (SALTO FUERTE CON SLIDER)
fMov:AddSlider("FUERZA SALTO", 50, 600, 50, function(v)
    if player.Character and player.Character:FindFirstChild("Humanoid") then 
        player.Character.Humanoid.JumpPower = v
        player.Character.Humanoid.UseJumpPower = true
    end
end)

hud:Notify("Script Luis Listo âœ…")
