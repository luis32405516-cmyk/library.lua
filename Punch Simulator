local RainbowUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/luis32405516-cmyk/library.lua/refs/heads/main/Prueba2?v=" .. tick()))()
local hud = RainbowUI:CreateWindow(240, 520)

local player = game.Players.LocalPlayer
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local state = { 
    fly = false, 
    flySpeed = 70, 
    noclip = false,
    currentVel = Vector3.zero,
    easing = 15 -- Respuesta inmediata
}

local bv, bg, flyConn

local fMov = hud:AddFolder("AJUSTES PERSONAJE ‚öôÔ∏è")

-- L√ìGICA DE VUELO SINCRONIZADA
local function flightStep(dt)
    local char = player.Character
    if not char or not state.fly then return end
    local root = char:FindFirstChild("HumanoidRootPart")
    local hum = char:FindFirstChildOfClass("Humanoid")
    local camera = workspace.CurrentCamera
    
    if not root or not bv or not bg then return end

    local dir = Vector3.zero
    local camCF = camera.CFrame

    -- OBTENER DIRECCI√ìN DEL JOYSTICK/TECLADO
    -- Usamos GetMoveVector para obtener la entrada pura del usuario
    local moveInput = hum.MoveDirection
    
    -- Si hay movimiento, calculamos la direcci√≥n relativa a la c√°mara
    if moveInput.Magnitude > 0 then
        -- IMPORTANTE: Multiplicamos por la posici√≥n de la c√°mara para que "Adelante" sea siempre hacia donde miras
        dir = moveInput
    end

    -- Soporte extra para subir/bajar en PC
    if UserInputService.KeyboardEnabled then
        if UserInputService:IsKeyDown(Enum.KeyCode.Space) then dir += Vector3.new(0, 1, 0) end
        if UserInputService:IsKeyDown(Enum.KeyCode.LeftControl) then dir -= Vector3.new(0, 1, 0) end
    end

    local targetVel = dir * state.flySpeed
    
    -- Suavizado de velocidad para que no d√© tirones
    state.currentVel = state.currentVel:Lerp(targetVel, math.clamp(state.easing * dt, 0, 1))
    bv.Velocity = state.currentVel
    
    -- CORRECCI√ìN DEFINITIVA DE ROTACI√ìN
    -- El mu√±eco siempre mirar√° hacia donde apunta la C√ÅMARA para no volar de espaldas
    if state.fly then
        bg.CFrame = camCF
    end
end

fMov:AddButton("VOLAR (FLY CORREGIDO)", function()
    state.fly = not state.fly
    local char = player.Character
    local root = char and char:FindFirstChild("HumanoidRootPart")
    local hum = char and char:FindFirstChildOfClass("Humanoid")

    if state.fly and root and hum then
        hud:Notify("Fly: ACTIVADO üöÄ")
        
        bv = Instance.new("BodyVelocity", root)
        bv.MaxForce = Vector3.new(1e7, 1e7, 1e7)
        bv.Velocity = Vector3.zero
        
        bg = Instance.new("BodyGyro", root)
        bg.MaxTorque = Vector3.new(1e7, 1e7, 1e7)
        bg.P = 30000 
        
        hum.PlatformStand = true
        flyConn = RunService.Heartbeat:Connect(flightStep)
    else
        hud:Notify("Fly: DESACTIVADO üõë")
        if flyConn then flyConn:Disconnect() flyConn = nil end
        if bv then bv:Destroy() bv = nil end
        if bg then bg:Destroy() bg = nil end
        if hum then hum.PlatformStand = false end
        state.currentVel = Vector3.zero
    end
end)

-- SLIDER DE VELOCIDAD
fMov:AddSlider("VELOCIDAD VUELO", 10, 500, 70, function(v)
    state.flySpeed = v
end)

-- Resto de funciones con notificaciones
fMov:AddButton("NOCLIP (ATRAVESAR)", function()
    state.noclip = not state.noclip
    hud:Notify(state.noclip and "Noclip: ON üëª" or "Noclip: OFF üß±")
    local nc; nc = RunService.Stepped:Connect(function()
        if not state.noclip then nc:Disconnect() return end
        if player.Character then
            for _, v in pairs(player.Character:GetDescendants()) do
                if v:IsA("BasePart") then v.CanCollide = false end
            end
        end
    end)
end)

fMov:AddSlider("VELOCIDAD CAMINAR", 16, 500, 16, function(v)
    if player.Character and player.Character:FindFirstChild("Humanoid") then 
        player.Character.Humanoid.WalkSpeed = v 
    end
end)

fMov:AddSlider("FUERZA SALTO", 50, 600, 50, function(v)
    if player.Character and player.Character:FindFirstChild("Humanoid") then 
        player.Character.Humanoid.JumpPower = v
        player.Character.Humanoid.UseJumpPower = true
    end
end)
