-- Referencia a la librer√≠a y creaci√≥n de ventana
local RainbowUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/luis32405516-cmyk/library.lua/refs/heads/main/Prueba2"))()
local hud = RainbowUI:CreateWindow(230, 320)

-- Servicios y Eventos centralizados
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local events = ReplicatedStorage:WaitForChild("Events")
local clickRemote = events:WaitForChild("DamageIncreaseOnClickEvent")
local winRemote = events:WaitForChild("PushEvent")

-- Configuraci√≥n de estado
local settings = {
    autoClick = false,
    autoWin = false,
    clickDelay = 0.1,
    winDelay = 0.2
}

-- Carpeta Principal: AUTO FARM
local farmFolder = hud:AddFolder("AUTO FARM ü•ä")

-- L√≥gica de Auto-Click (Bucle optimizado)
local function startClicker()
    task.spawn(function()
        while settings.autoClick do
            clickRemote:FireServer()
            task.wait(settings.clickDelay)
        end
    end)
end

-- L√≥gica de Auto-Win (Bucle optimizado)
local function startWinBot()
    task.spawn(function()
        local payload = {true}
        while settings.autoWin do
            winRemote:FireServer(unpack(payload))
            task.wait(settings.winDelay)
        end
    end)
end

-- Botones de Control
farmFolder:AddButton("AUTO CLICK: ON/OFF", function()
    settings.autoClick = not settings.autoClick
    hud:Notify(settings.autoClick and "Clicker Activo" or "Clicker Detenido", 1)
    if settings.autoClick then startClicker() end
end)

farmFolder:AddButton("GANAR PELEA üèÜ", function()
    settings.autoWin = not settings.autoWin
    hud:Notify(settings.autoWin and "Auto-Win Activo" or "Auto-Win Detenido", 1)
    if settings.autoWin then startWinBot() end
end)

-- Carpeta de Ajustes: VELOCIDAD
local speedFolder = hud:AddFolder("VELOCIDAD CLICK ‚ö°")

speedFolder:AddButton("M√ÅXIMA (0.01)", function() 
    settings.clickDelay = 0.01 
    hud:Notify("Velocidad M√°xima", 1)
end)

speedFolder:AddButton("EST√ÅNDAR (0.1)", function() 
    settings.clickDelay = 0.1 
    hud:Notify("Velocidad Est√°ndar", 1)
end)

-- Utilidades de Jugador
hud:AddButton("SUPER VELOCIDAD üèÉ", function()
    local hum = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
    if hum then hum.WalkSpeed = 80 end
    hud:Notify("Velocidad 80", 1)
end)

