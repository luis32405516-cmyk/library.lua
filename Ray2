-- [[ LUIS UNV - ELITE LOADER (AUTO-SAVE ACCESS) ]]

local LP = game:GetService("Players").LocalPlayer
local HttpService = game:GetService("HttpService")

-- [[ CONFIGURACIÓN ]]
local API_KEY = "cf6bf3061d4cc50e7b682c55be869cd436731a0252b9e3ddedd40efae5f2b83e"
local MI_LINK = "https://lootdest.org/s?VPjgnUFI" 
local SCRIPT_REAL = "https://raw.githubusercontent.com/luis32405516-cmyk/library.lua/refs/heads/main/Ray1"

-- Función de Verificación (Pregunta a LootLabs si el ID ya tiene permiso)
local function VerificarID()
    local success, res = pcall(function()
        return game:HttpGet("https://api.lootlabs.gg/v1/keys/verify?api_key="..API_KEY.."&hwid="..tostring(LP.UserId))
    end)
    
    if success then
        local data = HttpService:JSONDecode(res)
        return data.success
    end
    return false
end

-- [[ INTERFAZ LUIS UNV ]]
local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.new(0, 300, 0, 160); Main.Position = UDim2.new(0.5, -150, 0.5, -80); Main.BackgroundColor3 = Color3.fromRGB(12, 12, 12)
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 15)
local Stroke = Instance.new("UIStroke", Main); Stroke.Thickness = 2

task.spawn(function()
    while task.wait(0.01) do Stroke.Color = Color3.fromHSV(tick() % 5 / 5, 0.8, 1) end
end)

local BtnGet = Instance.new("TextButton", Main)
BtnGet.Text = "OBTENER ACCESO"; BtnGet.Size = UDim2.new(0.8, 0, 0, 35); BtnGet.Position = UDim2.new(0.1, 0, 0.25, 0); BtnGet.BackgroundColor3 = Color3.fromRGB(30,30,30); BtnGet.TextColor3 = Color3.new(1,1,1); Instance.new("UICorner", BtnGet)

BtnGet.MouseButton1Click:Connect(function()
    setclipboard(MI_LINK)
    BtnGet.Text = "LINK COPIADO - VE AL NAVEGADOR"
end)

local BtnCheck = Instance.new("TextButton", Main)
BtnCheck.Text = "VERIFICAR ACCESO GUARDADO"; BtnCheck.Size = UDim2.new(0.8, 0, 0, 35); BtnCheck.Position = UDim2.new(0.1, 0, 0.6, 0); BtnCheck.BackgroundColor3 = Color3.fromRGB(0, 120, 200); BtnCheck.TextColor3 = Color3.new(1,1,1); Instance.new("UICorner", BtnCheck)

BtnCheck.MouseButton1Click:Connect(function()
    if VerificarID() then
        BtnCheck.Text = "ACCESO VÁLIDO ✅"
        task.wait(1)
        ScreenGui:Destroy()
        loadstring(game:HttpGet(SCRIPT_REAL))()
    else
        BtnCheck.Text = "ID NO ENCONTRADA ❌"
        task.wait(2)
        BtnCheck.Text = "VERIFICAR ACCESO GUARDADO"
    end
end)
